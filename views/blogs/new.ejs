<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-6" style="margin : 20px auto; padding : 10px;">
           
            <div class="card bg-light" style="margin : 20px auto">
                <h2 class="text-center">New Instance</h2>
                <div class="card-body">
                    <form action="/blogs" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <input class="form-control" type="text" name="name" placeholder="Enter Title" required>
                        </div>
                        <div class="form-group">
                                <label class="form-control btn btn-primary btn-block">
                                        <input class="form-control" type="file" name="blogpicture" required multiple style="display:none"/>
                                        Upload Images
                                </label>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="description" placeholder="Description"
                                required>  
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block">Submit!</button>
                        </div>
                    </form>
                    <a href="/blogs">Go Back</a>
                
            </div>
        </div>
    </div>
</div>
</div>
<% include ../partials/footer %>
