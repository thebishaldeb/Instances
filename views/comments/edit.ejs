<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Comment </h1>
        <div style="width: 30%; margin: 25px auto;">
                <form action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Add Comment" value="<%= comment.text %>" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Update!</button>
                </div>    
            </form>
            <a href="/blogs">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>